using jquery cdn


 <script>
        $(document).ready(function() {
            // Handle timesheets collapse
            $('#collapseButton').on('click', function(e) {
                e.preventDefault();
                $('#flush-tasktimer').collapse('toggle');
            });
        });
    </script>

